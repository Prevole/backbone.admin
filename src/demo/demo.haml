    %script{src: "/js/backbone.admin.js", type: "text/javascript"}

    %script{src: "/demo.js", type: "text/javascript"}

  %body
    .container
      %h1= "Backbone Admin Demo"

      %nav.menu
        %a{href: "books", data-action: "books"}= "Books"
        = " | "
        %a{href: "fruits", data-action: "fruits"}= "Fruits"

      .content

    %script#createFruit{type: "text/template"}
      %h2= "Add fruit"
      %from
        %p
          %label= "Name"
          %input{id: "name", type: "text", name: "name"}
        %button.btn.create= "Create"
        %button.btn.cancel= "Cancel"

    %script#editFruit{type: "text/template"}
      %h2= "Edit fruit"
      %from
        %p
          %label= "Name"
          %input{id: "name", type: "text", name: "name"}
        %button.btn.edit= "Edit"
        %button.btn.cancel= "Cancel"

    %script#createBook{type: "text/template"}
      %h2= "Add book"
      %from
        %p
          %label= "Title"
          %input{id: "title", type: "text", name: "title"}
        %button.btn.create= "Create"
        %button.btn.cancel= "Cancel"

    %script#editBook{type: "text/template"}
      %h2= "Edit book"
      %from
        %p
          %label= "title"
          %input{id: "title", type: "text", name: "title"}
        %button.btn.edit= "Edit"
        %button.btn.cancel= "Cancel"

